# Shared Environment Configuration for Engineering Lab
# Copy this file to .env and add your actual API keys

# OpenAI API Configuration
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# XAI API Configuration  
# Get your key from: https://console.x.ai/
XAI_API_KEY=xai-your-xai-key-here

# Anthropic API Configuration
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=ant-your-anthropic-key-here

# Service API Key for internal communication
SERVICE_API_KEY=your-service-secret-key

# Default LLM Configuration
LLM_PROVIDER=openai
MODEL=gpt-4o-mini
DEFAULT_MAX_TOKENS=256
REQUEST_TIMEOUT_SECONDS=15

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true

# Agent Alignment UI Configuration
AGENT_UI_PORT=8001
AGENT_UI_HOST=0.0.0.0

# LLM Service Configuration
LLM_SERVICE_PORT=8000
LLM_SERVICE_HOST=0.0.0.0

# Local LLM Configuration (for Ollama)
USE_LOCAL_LLM=false
LOCAL_LLM_BASE_URL=http://localhost:11434/v1